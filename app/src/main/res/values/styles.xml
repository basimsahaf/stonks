<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- TODO: Customize colors after we have finalized the design -->
    </style>

    <style name="AppTheme.TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.TextAppearance.XXLLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.TextAppearance.XLLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.TextAppearance.LargeLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextAppearance.MediumLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.MediumLabelSecondary" parent="AppTheme.TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.TextAppearance.SmallLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.TextAppearance.SmallLabelSecondary" parent="AppTheme.TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.TextAppearance.XSLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Content" parent="AppTheme.TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme.TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">5sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.PrimaryButton" parent="AppTheme.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:paddingHorizontal">@dimen/button_horizontal_padding</item>
        <item name="android:paddingVertical">@dimen/button_vertical_padding</item>
    </style>

    <style name="AppTheme.Button.SecondaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">5sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingVertical">@dimen/button_vertical_padding</item>
        <item name="android:paddingHorizontal">@dimen/text_button_horizontal_padding</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.ButtonGroupButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/colorPrimaryOutline</item>
    </style>

    <style name="AppTheme.Button.FloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:backgroundTintMode">add</item>
        <item name="android:paddingHorizontal">@dimen/button_horizontal_padding</item>
        <item name="android:paddingVertical">@dimen/button_vertical_padding</item>
        <item name="android:minWidth">150dp</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="AppTheme.Button.SpeedDialButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:tint">@color/white</item>
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="borderWidth">0dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginEnd">23dp</item>
    </style>

    <style name="AppTheme.Button.FloatingActionButton.ShapeOverlay" parent="AppTheme.Button">
        <item name="cornerSize">35sp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="AppTheme.Button.AddSubtractButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorPrimaryOutline</item>
        <item name="strokeColor">@color/colorPrimaryOutline</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="shapeAppearanceOverlay">@style/roundShapeAppearanceOverlay</item>
    </style>

    <style name="roundShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="AppTheme.ChartStyle">
        <item name="spark_lineColor">@color/colorPrimary</item>
        <item name="spark_lineWidth">3dp</item>
        <item name="spark_cornerRadius">5dp</item>
        <item name="spark_fill">false</item>

        <item name="spark_baseLineColor">@color/white</item>
        <item name="spark_baseLineWidth">2dp</item>

        <item name="spark_scrubLineColor">@color/white</item>
        <item name="spark_scrubLineWidth">2dp</item>
        <item name="spark_scrubEnabled">true</item>

        <item name="spark_animateChanges">true</item>
    </style>

    <style name="AppTheme.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_text</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_text</item>
    </style>
    <style name="AppTheme.SlidingDrawer">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="AppTheme.TextAppearance.SmallErrorLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
</resources>
