<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.TextAppearance.XXLLabel">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.TextAppearance.XLLabel">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.TextAppearance.LargeLabel">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextAppearance.MediumLabel">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.SmallLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.TextAppearance.XSLabel">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Content">
        <item name="android:textSize">15sp</item>
    </style>
</resources>