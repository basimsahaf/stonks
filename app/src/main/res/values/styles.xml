<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- TODO: Customize colors after we have finalized the design -->
    </style>

    <style name="AppTheme.TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.TextAppearance.XXLLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.TextAppearance.XLLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.TextAppearance.LargeLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextAppearance.MediumLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.SmallLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.TextAppearance.XSLabel" parent="AppTheme.TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Content" parent="AppTheme.TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme.TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">5sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.PrimaryButton" parent="AppTheme.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.SecondaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">5sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.FloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.FloatingActionButton.ShapeOverlay" parent="AppTheme.Button">
        <item name="cornerSize">35sp</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>
