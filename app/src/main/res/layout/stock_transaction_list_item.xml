<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/page_padding_horizontal"
        android:paddingVertical="@dimen/row_margin"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/transaction_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:35"
        style="@style/AppTheme.TextAppearance.XSLabel"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transaction_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/title_margin"
        android:text="Market buy"
        style="@style/AppTheme.TextAppearance.XSLabel"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintLeft_toRightOf="@id/transaction_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/label_margin"
        android:text="@string/sym_placeholder"
        style="@style/AppTheme.TextAppearance.LargeLabel"
        app:layout_constraintLeft_toLeftOf="@id/transaction_type"
        app:layout_constraintTop_toBottomOf="@id/transaction_type" />

    <TextView
        android:id="@+id/cost_shares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="$1456.78"
        style="@style/AppTheme.TextAppearance.LargeLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price_per_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="777 shares @ $10.98"
        style="@style/AppTheme.TextAppearance.XSLabel"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/symbol" />

</androidx.constraintlayout.widget.ConstraintLayout>
