<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HypotheticalModeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stock_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:layout_editor_absoluteY="32dp">

        <TextView
            android:id="@+id/stock_symbol"
            style="@style/AppTheme.TextAppearance.SmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sym_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stock_name"
            style="@style/AppTheme.TextAppearance.XXLLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_name_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stock_symbol" />

        <Space
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="@dimen/section_margin"
            app:layout_constraintTop_toBottomOf="@id/stock_info_section" />

        <Space
            android:id="@+id/shares_selector"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/section_margin"
            app:layout_constraintTop_toBottomOf="@id/graph" />


        <LinearLayout
            android:id="@+id/row_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/section_margin"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shares_selector">

            <TextView
                android:id="@+id/price_label"
                style="@style/AppTheme.TextAppearance.MediumLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"

                android:text="@string/price_on_label" />

            <TextView
                android:id="@+id/price"
                style="@style/AppTheme.TextAppearance.MediumLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:text="$100" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_margin"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row_1">

            <TextView
                android:id="@+id/estimated_cost_label"
                style="@style/AppTheme.TextAppearance.MediumLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="@string/estimated_cost_label" />

            <TextView
                android:id="@+id/estimated_cost"
                style="@style/AppTheme.TextAppearance.MediumLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:text="$100" />
        </LinearLayout>

        <View
            android:id="@+id/section_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/row_2"
            android:layout_marginTop="@dimen/section_divider_margin"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/row_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/section_divider_margin"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/section_divider">

            <TextView
                android:id="@+id/estimated_value_label"
                style="@style/AppTheme.TextAppearance.MediumLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="@string/estimated_cost_label" />

            <TextView
                android:id="@+id/estimated_value"
                style="@style/AppTheme.TextAppearance.MediumLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:text="$100" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>